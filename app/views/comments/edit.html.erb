<h3 class="display-5">Editar Comentario</h3>
<div class="border mt-4 rounded-4 p-3">
  <%= form_for([@post, @comment]) do |f| %>
    <div class="field">
      <%= f.label :content, class: "d-block mb-2 fs-5" %>
      <%= f.text_area :content, class:"w-100 p-2 rounded-2", rows: 5 %>
    </div>
    <div class="mt-3 d-flex align-items-center gap-5">
      <%= f.submit 'Actualizar comentarios', class: "btn btn-sm btn-outline-light" %>
      <%= link_to 'Borrar comentario', post_comment_path(@post, @comment), method: :delete, data: { confirm: 'Estas seguro' }, class:"link-light" %>
      <%= link_to "Volver a Posts", posts_path, class:"link-light" %>
    </div>
  <% end %>
</div>
